<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">
    <TextView
        android:id="@+id/newsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:text="新闻头条，上首页，就头条"
        android:textColor="#000"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/newsImage1"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/bg_defualt_220x150"
            />
        <ImageView
            android:id="@+id/newsImage2"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/bg_defualt_220x150"
            />
        <ImageView
            android:id="@+id/newsImage3"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/bg_defualt_220x150"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/newsSrc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/topic_user_default"
            android:text="新浪"
            android:drawablePadding="20dp"
            android:textSize="14sp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/newsTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2020-03-14"
            android:gravity="end"
            android:paddingRight="20dp"
            android:textSize="14sp"
            />
    </LinearLayout>

</LinearLayout>